{
    "compilerOptions": {
        "target": "ES2022",
        "jsx": "react-jsx",
        "module": "ES2022",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": ["@webgpu/types"]
    },
    "include": [
        "src/**/*.tsx",
        "global.d.ts",
        "src/**/*.ts",
        "src/UI/MainContent/.test.tsx",
        "src/main.ts"
    ]
}
